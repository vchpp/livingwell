                    </div>
                  </div>
                </div>
               </div>


                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :category %>
                      <%= form.select :category, ["General", "Testing", "Vaccination", "Other"], class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :featured? %>
                      <%= form.check_box :featured %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :archived? %>
                      <%= form.check_box :archive %>
