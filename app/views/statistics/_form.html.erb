<section id="fh5co-feature">
  <div class="container">
    <div class="fh5co-spacer fh5co-spacer-lg"></div>
    <div class="row">
			<div class="col-md-12">
        <%= form_with(model: statistic) do |form| %>
          <% if statistic.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(statistic.errors.count, "error") %> prohibited this statistic from being saved:</h2>

              <ul>
                <% statistic.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div id="fh5co-tab-feature-vertical" class="fh5co-tab text-center">
            <ul class="resp-tabs-list hor_1">
              <li> English (en)</li>
              <li> Chinese Traditional (zh_tw)</li>
              <li> Chinese Simplified (zh_cn)</li>
              <li> Vietnamese (vi)</li>
              <li> Hmong (hmn)</li>
            </ul>
            <div class="resp-tabs-container hor_1">
                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :en_title %>
                      <%= form.text_area :en_title , size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :en_description %>
                      <%= form.text_area :en_description, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :en_link_name %>
                      <%= form.text_area :en_link_name, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :en_link_url %>
                      <%= form.text_field :en_link_url, class: 'form-control input-lg' %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_tw_title %>
