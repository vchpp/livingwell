                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_tw_description %>
                      <%= form.text_area :zh_tw_description, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_tw_link_name %>
                      <%= form.text_area :zh_tw_link_name, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_tw_link_url %>
                      <%= form.text_field :zh_tw_link_url, class: 'form-control input-lg' %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_cn_title %>
                      <%= form.text_area :zh_cn_title, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_cn_description %>
                      <%= form.text_area :zh_cn_description, size: '70x5', class: 'form-control input-lg' %>
