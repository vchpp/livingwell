                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :vi_title %>
                      <%= form.text_area :vi_title , size: '70x5', class: 'form-control input-lg' %>
