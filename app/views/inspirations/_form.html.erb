<section id="fh5co-feature">
  <div class="container">
    <div class="fh5co-spacer fh5co-spacer-lg"></div>
    <div class="row">
			<div class="col-md-12">
        <%= form_with(model: inspiration) do |form| %>
          <% if inspiration.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(inspiration.errors.count, "error") %> prohibited this inspiration from being saved:</h2>

              <ul>
                <% inspiration.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div id="fh5co-tab-feature" class="fh5co-tab text-center">
            <ul class="resp-tabs-list hor_1">
              <li> English (en)</li>
              <li> Chinese Traditional (zh_tw)</li>
              <li> Chinese Simplified (zh_cn)</li>
              <li> Vietnamese (vi)</li>
              <li> Hmong (hm)</li>
              <li> Korean (ko)</li>
            </ul>
            <div class="resp-tabs-container hor_1">
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-8 col-md-offset-2">  
                      <div class="field form-group">
                        <%= form.label :en_inspiration %>
                        <%= form.text_area :en_inspiration, size: '70x5', class: 'form-control input-lg' %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-8 col-md-offset-2">
                      <div class="field form-group">
                        <%= form.label :zh_tw_inspiration %>
                        <%= form.text_area :zh_tw_inspiration, size: '70x5', class: 'form-control input-lg' %>
                      </div>
                    </div>
                  </div>

                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-8 col-md-offset-2">
                      <div class="field form-group">
                        <%= form.label :zh_cn_inspiration %>
                        <%= form.text_area :zh_cn_inspiration, size: '70x5', class: 'form-control input-lg' %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-8 col-md-offset-2">
                      <div class="field form group">
                        <%= form.label :vi_inspiration %>
                        <%= form.text_area :vi_inspiration, size: '70x5', class: 'form-control input-lg' %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-8 col-md-offset-2">
                      <div class="field form-group">
                        <%= form.label :hm_inspiration %>
                        <%= form.text_area :hm_inspiration, size: '70x5', class: 'form-control input-lg' %>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-8 col-md-offset-2">
                      <div class="field form-group">
                        <%= form.label :ko_inspiration %>
                        <%= form.text_area :ko_inspiration, size: '70x5', class: 'form-control input-lg' %>
                      </div>
                    </div>
                  </div>
                </div>
               </div>

                <div class="row">
                  <div class="fh5co-spacer fh5co-spacer-sm"></div>
                  <div class="col-md-8 col-md-offset-2">
                    <div class="field form-group">
                      <%= form.label :tags %> Separate each tag with a new line
                      <%= form.text_area :tags, name: 'inspiration[tags][]', size: '70x5', class: 'form-control input-lg', placeholder: "cope with loss\nself-care\ntrigger warning\ndepression", value: form.object.tags.join("\n") %>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :archive? %>
                      <%= form.check_box :archive %>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :featured? %>
                      <%= form.check_box :featured %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <div class="field">
                        <%= form.label :priority %>
                        <%= form.number_field :priority %>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :category %>
                      <%= form.select :category, ['build_resilience', 'get_good_sleep', 'manage_stress', 'strengthen_social_connections', 'help_yourself_help_others', 'other'], class: 'form-control input-lg' %>
                    </div>
                  </div>
                </div>


                <div class="col-md-12">
                  <div class="actions">
                    <%= form.submit class: "btn btn-primary btn-lg btn-block"%>
                    <%= link_to 'Back', inspirations_path, class: "btn btn-primary btn-lg btn-block" %>
                  </div>
                </div>

                <div class="fh5co-spacer fh5co-spacer-sm"></div>

            </div>
          </div>

        <% end %>
      </div>
    </div>
</section>
