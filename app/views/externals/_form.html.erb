
<section id="fh5co-feature">
  <div class="container">
    <div class="fh5co-spacer fh5co-spacer-lg"></div>
    <div class="row">
			<div class="col-md-12">
        <%= form_with(model: external) do |form| %>
          <% if external.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(external.errors.count, "error") %> prohibited this external from being saved:</h2>

              <ul>
                <% external.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div id="fh5co-tab-feature-vertical" class="fh5co-tab text-center">
            <ul class="resp-tabs-list hor_1">
              <li> English (en)</li>
              <li> Chinese Traditional (zh_tw)</li>
              <li> Chinese Simplified (zh_cn)</li>
              <li> Vietnamese (vi)</li>
              <li> Hmong (hmn)</li>
            </ul>
            <div class="resp-tabs-container hor_1">
                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :en_title %>
                      <%= form.text_area :en_title , size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :en_source %>
                      <%= form.text_area :en_source, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :en_content %>
                      <%= form.text_area :en_content, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :en_external_link %>
                      <%= form.text_area :en_external_link, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :en_notes %>
                      <%= form.text_area :en_notes , size: '70x5', class: 'form-control input-lg'%>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_tw_title %>
                      <%= form.text_area :zh_tw_title, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_tw_source %>
                      <%= form.text_area :zh_tw_source, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_tw_content %>
                      <%= form.text_area :zh_tw_content, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_tw_external_link %>
                      <%= form.text_area :zh_tw_external_link, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_tw_notes %>
                      <%= form.text_area :zh_tw_notes, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_cn_title %>
                      <%= form.text_area :zh_cn_title, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_cn_source %>
                      <%= form.text_area :zh_cn_source, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_cn_content %>
                      <%= form.text_area :zh_cn_content, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_cn_external_link %>
                      <%= form.text_area :zh_cn_external_link, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :zh_cn_notes %>
                      <%= form.text_area :zh_cn_notes, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>
                </div>


                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :vi_title %>
                      <%= form.text_area :vi_title , size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :vi_source %>
                      <%= form.text_area :vi_source, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :vi_content %>
                      <%= form.text_area :vi_content, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :vi_external_link %>
                      <%= form.text_area :vi_external_link, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :vi_notes %>
                      <%= form.text_area :vi_notes , size: '70x5', class: 'form-control input-lg'%>
                    </div>
                  </div>
                </div>


                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :hmn_title %>
                      <%= form.text_area :hmn_title, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :hmn_source %>
                      <%= form.text_area :hmn_source, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :hmn_content %>
                      <%= form.text_area :hmn_content, size: '70x5', class: 'form-control input-lg'  %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :hmn_external_link %>
                      <%= form.text_area :hmn_external_link, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :hmn_notes %>
                      <%= form.text_area :hmn_notes, size: '70x5', class: 'form-control input-lg' %>
                    </div>
                  </div>
                </div>
              </div>


                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :languages %> must be English / 繁體中文 / 简体中文 / lus hmoob / Tiếng Việt
                      <%= form.text_area :languages, name: 'external[languages][]', size: '70x5', class: 'form-control input-lg', placeholder: "languages - one per line - please use English / 繁體中文 / 简体中文 / kwv tij hmoob / Tiếng Việt", value: form.object.languages.join("\n") %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :category %>
                      <%= form.select :category, ["General", "Testing", "Vaccination", "Other"], class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :last_version_date %>
                      <%= form.date_select :last_version_date %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :featured? %>
                      <%= form.check_box :featured %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :archive? %>
                      <%= form.check_box :archive %>
                    </div>
                  </div>
                </div>


                <div class="col-md-12">
                  <div class="actions">
                    <%= form.submit class: "btn btn-primary btn-lg btn-block"%>
                    <%= link_to 'Back', externals_path, class: "btn btn-primary btn-lg btn-block" %>
                  </div>
                </div>

                <div class="fh5co-spacer fh5co-spacer-sm"></div>

            </div>
          <% end %>
        </div>
      </div>
    </div>
</section>
