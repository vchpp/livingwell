                    <%= check_box_tag(:vi_audio_purge) %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

            <div class="col-md-12">
              <div class="field form-group">
                <%= form.label :category %>
                <%= form.select :category, ["General", "Testing", "Vaccination", "Other"], class: 'form-control input-lg' %>
              </div>
            </div>
            <div class="col-md-12">
              <div class="field form-group">
                <%= form.label :archive? %>
                <%= form.check_box :archive %>
              </div>
            </div>

            <div class="col-md-8 col-md-offset-2">
              <div class="actions">
                <%= form.submit class: "btn btn-primary btn-lg btn-block"%>
                <%= link_to 'Back', faqs_path, class: "btn btn-primary btn-lg btn-block" %>
              </div>
            </div>

          </div>

        <% end %>
        <div class="fh5co-spacer fh5co-spacer-sm"></div>
      </div>
    </div>
  </div>
</section>
