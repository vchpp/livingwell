                    </div>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="field form-group">
                    <% if @faq.zh_tw_audio.attached? %>
                      <div class="col-md-12 text-center">
                        <%= audio_tag url_for(@faq.zh_tw_audio), controls: true %>
                      </div>
                    <% end %>
                    <br>
                    <%= form.label :zh_tw_audio %> <b>| Cantonese audio only.  All audio must be in .wav or .mp3 format.</b>
                    <%= form.file_field :zh_tw_audio, direct_upload: true, class: "form-control input-lg" %>
                    <% if @faq.zh_tw_audio.attached? %>
                      <%= label_tag(:zh_tw_audio_purge, "Delete zh_tw_audio?") %>
                      <%= check_box_tag(:zh_tw_audio_purge) %>
                    <% end %>
                  </div>
                </div>
              </div>

              <div>
