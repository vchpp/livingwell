                      <%= check_box_tag(:zh_cn_audio_purge) %>
                    <% end %>
                  </div>
                </div>
              </div>

              <div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :hmn_question %>
