          <div class="col-md-8 col-md-offset-2">
            <div class="field form-group">
              <%= form.label :tags %> Separate each tag with a new line
              <%= form.text_area :tags, name: 'healthwise_article[tags][]', size: '70x5', class: 'form-control input-lg', placeholder: "cope with loss\nself-care\ntrigger warning\ndepression", value: form.object.tags.join("\n") %>
            </div>
          </div>
          
          <div class="col-md-12">
            <div class="field form-group">
              <%= form.label :category %>
              <%= form.select :category, ['general', 'self_care', 'strengthen_social_connections', 'cope_with_loss', 'help_yourself_help_others', 'other'], class: 'form-control input-lg' %>
            </div>
          </div>
          <div class="col-md-12">
            <div class="field form-group">
              <%= form.label :archive? %>
              <%= form.check_box :archive %>
