                      <%= check_box_tag(:hmn_audio_purge) %>
                    <% end %>
                  </div>
                </div>
              </div>

              <div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :vi_question %>
                      <%= form.text_area :vi_question, size:'70x2', class: 'form-control input-lg' %>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <div class="field form-group">
                      <%= form.label :vi_answer %>
                      <%= form.rich_text_area :vi_answer %>
                    </div>
                  </div>
                </div>
              <div class="col-md-12">
                <div class="field form-group">
                  <% if @faq.vi_audio.attached? %>
