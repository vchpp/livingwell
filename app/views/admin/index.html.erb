<%
meta title: "COVID-INFORMED - Admin",
     description: "covid-informed",
     keywords: %w(free html5, free template, free bootstrap, html5, css3, mobile first, responsive)
%>

<div class="fh5co-spacer fh5co-spacer-lg"></div>
<section>
  <div class="container">
    <div class="row">
			<div class="col-md-8 col-md-offset-2">
      <% if user_signed_in? %>
        <% if current_user.try(:admin?) %>
        <div class="nav-item col-md-6">
          <%= link_to 'New Message', new_message_path, class: "btn btn-primary btn-lg btn-block" %>
        </div>
        <div class="nav-item col-md-6">
          <%= link_to 'New Profile', new_profile_path, class: "btn btn-primary btn-lg btn-block" %>
        </div>

        <div class="nav-item col-md-6">
          <%= link_to 'New Faq', new_faq_path, class: "btn-lg btn-block btn btn-primary" %>
        </div>
        <div class="nav-item col-md-6">
          <%= link_to 'New External Resource', new_external_path, class: "btn-lg btn-block btn btn-primary" %>
        </div>

        <div class="nav-item col-md-6">
          <%= link_to 'New Callout', new_callout_path, class: "btn-lg btn-block btn btn-primary" %>
        </div>
        <div class="nav-item col-md-6">
          <%= link_to 'New Download', new_download_path, class: "btn btn-primary btn-lg btn-block" %>
        </div>

        <div class="nav-item col-md-6">
          <%= link_to 'New Statistic', new_statistic_path, class: "btn btn-primary btn-lg btn-block" %>
        </div>

        <div class="nav-item col-md-6">
          <%= link_to 'New Healthwise Article', new_healthwise_article_path, class: "btn btn-primary btn-lg btn-block" %>
        </div>

        <div class="nav-item col-md-6">
          <%= link_to 'Export Comments to CSV', comments_path(format: "csv"), class: "btn btn-primary btn-lg btn-block"  %>
        </div>

        <div class="nav-item col-md-6">
          <%= link_to 'Export Likes to CSV', likes_path(format: "csv"), class: "btn btn-primary btn-lg btn-block"  %>
        </div>

        <div class="nav-item col-md-12">
          <a href="admin/audit-log" class="btn btn-primary btn-lg btn-block">Audit Logs</a>
        </div>
        <% end %>
        <div class="nav-item col-md-12">
          <a class="nav-link btn btn-primary btn-lg btn-block" href="<%=edit_user_registration_path%>">Settings</a>
        </div>

        <div class="nav-item col-md-12">
          <a class="nav-link btn btn-primary btn-lg btn-block" href="<%=destroy_user_session_path%>" data-method="delete">Logout</a>
        </div>
      <% else %>
        <div class="nav-item col-md-6">
          <a class="nav-link btn btn-primary btn-lg btn-block" href="<%=new_user_session_path%>">Login</a>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</section>
