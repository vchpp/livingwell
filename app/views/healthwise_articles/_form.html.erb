
<section id="fh5co-feature">
  <div class="container">
    <div class="fh5co-spacer fh5co-spacer-lg"></div>
    <div class="row">
			<div class="col-md-12">
        <%= form_with(model: healthwise_article) do |form| %>
          <% if healthwise_article.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(healthwise_article.errors.count, "error") %> prohibited this healthwise_article from being saved:</h2>

              <ul>
                <% healthwise_article.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div id="fh5co-tab-feature" class="fh5co-tab text-center">
            <h1>New Healthwise Article</h1>
            <div class="col-md-12">
              <div class="field form-group">
                <%= form.label :hwid %>
                <%= form.text_field :hwid %>
              </div>
            </div>

            <div class="col-md-12">
              <div class="field form-group">
                <%= form.label :article_or_topic %> Make sure to double check whether you're adding an article or topic
                <%= form.select :article_or_topic, ["Article", "Topic"], class: 'form-control input-lg' %>
              </div>
            </div>

            <div class="col-md-12">
              <div class="field form-group">
                <%= form.label :category %>
                <%= form.select :category, ['general', 'self_care', 'strengthen_social_connections', 'cope_with_loss', 'become_resourceful', 'other'], class: 'form-control input-lg' %>
              </div>
            </div>

            <div class="col-md-12">
              <div class="field form-group">
                <%= form.label :featured? %>
                <%= form.check_box :featured %>
              </div>
            </div>

            <div class="col-md-12">
              <div class="field form-group">
                <%= form.label :archive? %>
                <%= form.check_box :archive %>
              </div>
            </div>

            <div class="col-md-8 col-md-offset-2">
              <div class="field form-group">
                <%= form.label :tags %> Separate each tag with a new line
                <%= form.text_area :tags, name: 'healthwise_article[tags][]', size: '70x5', class: 'form-control input-lg', placeholder: "cope with loss\nself-care\ntrigger warning\ndepression", value: form.object.tags.join("\n") %>
              </div>
            </div>

            <div class="col-md-8 col-md-offset-2">
              <div class="actions">
                <%= form.submit class: "btn btn-primary btn-lg btn-block"%>
                <%= link_to 'Back', healthwise_articles_path, class: "btn btn-primary btn-lg btn-block" %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="fh5co-spacer fh5co-spacer-sm"></div>
      </div>
    </div>
  </div>
</section>
