
<section id="fh5co-feature">
  <div class="container">
    <div class="fh5co-spacer fh5co-spacer-lg"></div>
    <div class="row">
			<div class="col-md-12">
        <%= form_with(model: healthwise_article) do |form| %>
          <% if healthwise_article.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(healthwise_article.errors.count, "error") %> prohibited this healthwise_article from being saved:</h2>

              <ul>
                <% healthwise_article.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

        <div id="fh5co-tab-feature" class="fh5co-tab text-center">
          <h1>Editing Healthwise Article</h1>
          <div class="col-md-6">
            <div class="field form-group">
              <%= form.label :hwid %>:
              <%= @healthwise_article.hwid %>
            </div>
          </div>

          <div class="col-md-6">
            <div class="field form-group">
              <%= form.label :article_or_topic? %>
              <%= @healthwise_article.article_or_topic %>
            </div>
          </div>

          <div class="col-md-12">
            <div class="field form-group">
              <%= form.label :category %>
              <%= form.select :category, ['build_resilience', 'get_good_sleep', 'manage_stress', 'strengthen_social_connections', 'become_resourceful', 'mental_health_conditions', 'suicide_prevention', 'other'], class: 'form-control input-lg' %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="field form-group">
              <%= form.label :featured? %>
              <%= form.check_box :featured %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="field form-group">
              <%= form.label :archive? %>
              <%= form.check_box :archive %>
            </div>
          </div>

          <div class="col-md-4">
              <div class="field form-group">
                <%= form.label :priority %> 
                <%= form.text_field :priority, :size=>"2"  %>
              </div>
            </div>

          <div class="col-md-8 col-md-offset-2">
            <div class="field form-group">
              <%= form.label :languages %> must be en-us / zh-us / hm-us / vi-us / ko-us
              <%= form.text_area :languages, name: 'healthwise_article[languages][]', size: '70x5', class: 'form-control input-lg', value: form.object.languages.join("\n") %>
            </div>
          </div>

          <div class="col-md-8 col-md-offset-2">
            <div class="field form-group">
              <%= form.label :tags %> Separate each tag with a new line
              <%= form.text_area :tags, name: 'healthwise_article[tags][]', size: '70x5', class: 'form-control input-lg', placeholder: "cope with loss\nself-care\ntrigger warning\ndepression", value: form.object.tags.join("\n") %>
            </div>
          </div>

          <ul class="resp-tabs-list hor_1">
            <li> English (en)</li>
            <li> Chinese Traditional (zh_tw)</li>
            <li> Chinese Simplified (zh_cn)</li>
            <li> Vietnamese (vi)</li>
            <li> Hmong (hm)</li>
            <li> Korean (ko)</li>
          </ul>
          <div class="resp-tabs-container hor_1">

            <div class="row">
              <div class="col-md-6">
